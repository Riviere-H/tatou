# Environment Configuration Template for Tatou
# Copy this to .env and modify the values

# Database Configuration
MARIADB_ROOT_PASSWORD=rootpassword
MARIADB_USER=tatou
MARIADB_PASSWORD=tatou

# Security Flags
FLAG_2=my_flag2

# Application Security
SECRET_KEY=secure_secret_key_here
TOKEN_TTL_SECONDS=3600
REFRESH_TOKEN_TTL=86400

# GPG Configuration for RMAP
GPG_PASSPHRASE=your_gpg_passphrase_here

# Storage Configuration
STORAGE_DIR=/app/storage

===== Specialization D: Operational Security =====

# Debug mode toggle (0 = production, 1 = debug)
FLASK_DEBUG=0

# Prometheus metrics server port (optional)
METRICS_PORT=8000

# Log level control (INFO, WARNING, ERROR, DEBUG)
LOG_LEVEL=INFO

# Enable/disable metrics collection (true/false)
ENABLE_METRICS=true

# Security logging level (SECURITY, AUDIT, etc.)
SECURITY_LOG_LEVEL=AUDIT

# Incident response contact email
IR_CONTACT_EMAIL=contact@example.com

# Maximum log file size in MB
MAX_LOG_SIZE=100

# Log retention days
LOG_RETENTION_DAYS=30
