{
  "id": null,
  "uid": "tatou_detailed_security",
  "title": "Tatou Detailed Security Monitoring",
  "schemaVersion": 37,
  "version": 1,
  "time": {"from": "now-6h", "to": "now"},
  "refresh": "10s",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Security Events Overview",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [{"expr": "sum by (event_type) (security_events_total)", "refId": "A"}]
    },
    {
      "id": 2,
      "type": "table",
      "title": "Login Failures by IP",
      "gridPos": {"h": 10, "w": 12, "x": 12, "y": 0},
      "targets": [{"expr": "sum by (client_ip) (user_login_failures_total)", "refId": "A", "format": "table", "instant": true}]
    },
    {
      "id": 3,
      "type": "bargauge",
      "title": "Security Events by Type",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [{"expr": "sum by (event_type) (security_events_total)", "refId": "A"}]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "API Error Rate",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [{"expr": "sum by (endpoint, method) (api_errors_total)", "refId": "A"}]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "File Processing Errors",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "targets": [{"expr": "sum by (operation) (file_processing_errors_total)", "refId": "A"}]
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Watermark Operations",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "targets": [{"expr": "sum by (operation) (watermark_operations_total)", "refId": "A"}]
    },
    {
      "id": 7,
      "type": "table",
      "title": "Active Alerts (from ALERTS)",
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 24},
      "targets": [{"expr": "ALERTS", "refId": "A"}]
    }
  ]
}
